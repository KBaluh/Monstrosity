@model Monstrosity.Portal.Models.ActivityListViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Activities</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
}

<div class="btn-group" role="group" aria-label="...">
    @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-default" })
    <button type="button" class="btn btn-default">Update</button>
</div>

<div class="btn-group" role="group" aria-label="...">
    <button type="button" class="btn btn-default active">All</button>
    <button type="button" class="btn btn-default">Not started</button>
    <button type="button" class="btn btn-default">In progress</button>
    <button type="button" class="btn btn-default">Closed</button>
</div>

<br />
<br />

<table class="table table-responsive table-striped">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Activities)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.ActivityId  }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
